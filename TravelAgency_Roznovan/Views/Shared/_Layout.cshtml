<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/shared.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TravelAgency_Roznovan.styles.css" asp-append-version="true"/>
</head>
<body>
<div id="header-top">
    <div class="logo">Мир путешествий</div>
    <div class = "button-header">
        <button class = "button">Войти</button>
    </div>
</div>
<img class = "img-header" src = "~/images/Designer.jpg"  alt=""/>
<div id="header-bottom">
    <div class="menu">
        <ul>
            <li><a class = "menu_a" href = "#home" style="color: black;">Главная</a></li>
            <li><a class = "menu_a" href = "#contact" style="color: black;">Контакты</a></li>
            <li><a class = "menu_a" href = "#countries" style="color: black;">Страны</a></li>
            <li><a class = "menu_a" href = "#services" style="color: black;">Отзывы</a></li>
        </ul>
    </div>
</div>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<script src = "~/js/shared_script.js" asp-append-version="true"></script>
</body>
</html>